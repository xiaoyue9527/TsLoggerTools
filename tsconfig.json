{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "types": ["node", "jest"],
    "rootDir": "./src",
    "declaration": true
  },
  "include": ["src/**/*.ts", "test/**/*.test.ts", "type/**/*.ts","type/**/*.d.ts"],
  "exclude": ["node_modules", "test"]
}
